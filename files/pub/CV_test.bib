	keywords = {Remote sensing, Air quality, Atmosphere, Satellite, UV–vis},
	pages = {106478},
	file = {ScienceDirect Full Text PDF:/Users/asouri/Zotero/storage/VD9LJ83U/Gonzalez Abad et al. - 2019 - Five decades observing Earth’s atmospheric trace g.pdf:application/pdf;ScienceDirect Snapshot:/Users/asouri/Zotero/storage/9NUEU9PP/S0022407319301074.html:text/html},
